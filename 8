// Solicitar al usuario que ingrese el primer número
var primerNumero = prompt("Ingresa el primer número:");

// Convertir el input en número
var numero1 = parseFloat(primerNumero);

// Solicitar al usuario que ingrese el segundo número
var segundoNumero = prompt("Ingresa el segundo número:");

// Convertir el input en número
var numero2 = parseFloat(segundoNumero);

// Determinar el número mayor
var numeroMayor = Math.max(numero1, numero2);

// Mostrar el número mayor en una alerta
alert("El número mayor es: " + numeroMayor);
