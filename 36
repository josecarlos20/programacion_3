const altura = 5; // Altura de la pirÃ¡mide

for (let i = 1; i <= altura; i++) {
    const espacios = altura - i;
    const asteriscos = 2 * i - 1;

    // Imprimir espacios
    for (let j = 0; j < espacios; j++) {
        document.write("&nbsp;");
    }

    // Imprimir asteriscos
    for (let j = 0; j < asteriscos; j++) {
        document.write("*");
    }

    document.write("<br>");
}
